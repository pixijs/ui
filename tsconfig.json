{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "ScriptHost"],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./lib",
        "outDir": "./lib",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "include": ["./src", "./typings", "./tests", "./docs-source"]
}
